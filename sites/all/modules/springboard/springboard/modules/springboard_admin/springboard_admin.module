}

/**
 * Implements hook_springboard_admin_admin_menu_items_alter().
 *
 * Moved to the end of the processing line by hook_module_implements_alter().
 */
function springboard_admin_springboard_admin_admin_menu_items_alter(&$items) {
  // Order the fundraiser items.
  if (!empty($items['admin/springboard/donation-forms/all']['_children'])) {
    // Sort the fundraiser items alphabetically.
    uasort($items['admin/springboard/donation-forms/all']['_children'], 'springboard_admin_menu_item_alpha_order_title');

    // Set the donation form item's weight so it will appear first.
    if (!empty($items['admin/springboard/donation-forms/all']['_children']['admin/springboard/donation-forms/donation_form'])) {
      $items['admin/springboard/donation-forms/all']['_children']['admin/springboard/donation-forms/donation_form']['weight'] = -1;
    }
  }

  // Order the custom form items alphabetically.
  if (!empty($items['admin/springboard/forms/all']['_children'])) {
    uasort($items['admin/springboard/forms/all']['_children'], 'springboard_admin_menu_item_alpha_order_title');
  }

  // Sort the settings items alphabetically.
  uasort($items['admin/springboard/settings']['_children']['admin/springboard/settings/config']['_children'], 'springboard_admin_menu_item_alpha_order_title');
}

/**
 * Implements hook_admin_menu_output_build().
 *
 * Creates a custom top-level menu item and its children for the admin_menu
 * module.
 */
function springboard_admin_admin_menu_output_build(&$content) {
  // Add new top-level item to the menu.
  if (isset($content['menu'])) {
    $content['menu']['admin/springboard'] = array(
      '#title' => t('Springboard'),
      '#attributes' => array('class' => array('springboard_admin-springboard')),
      '#href' => 'admin/springboard',
      '#options' => array(
        'query' => drupal_get_destination(),
        // Apply a class on the link (anchor).
        'attributes' => array('class' => array('myitem-link-anchor')),
      ),
      // #weight controls the order of links in the resulting item list.
      '#weight' => 50,
    );
  $sbadmin_menu = menu_tree('springboard_admin_menu');
  $content['menu']['admin/springboard'] += springboard_admin_build_admin_menu_subnav($sbadmin_menu);
  }
}

/**
 * Implements hook_admin_menu_output_alter().
 *
 * Removes extraneous Springboard-releated menu items from the admin_menu menu.
 */
function springboard_admin_admin_menu_output_alter(&$content) {
  // remove lower-level springboard menu items from admin menu
    foreach ($content['menu'] as $key => $item) {
      if (preg_match('/^springboard\/.*$/', $key)) {
        unset($content['menu'][$key]);
      }
    }
}

/**
 * Implements hook_custom_theme().
 *
 * Force the use of springboard_backend theme on Springboard-related
