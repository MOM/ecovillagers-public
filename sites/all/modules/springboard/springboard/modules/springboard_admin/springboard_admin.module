/**
 * Submit handler for springboard_admin_settings form which rebuilds the
 * configurable logo drop-down links in the springboard_admin menu.
 *
 * We do this so that users who are allowed to administer Springboard can change
 * these menu items but not have control over menus in general.
 */
function _springboard_admin_logo_links_submit(&$form, &$form_state) {
  if (!isset($form_state['values']['springboard_logo_links']) || !isset($form['menu']['springboard_logo_links']['#default_value'])) {
    return;
  }
  // If the field's value hasn't changed then do nothing:
  if ($form['menu']['springboard_logo_links']['#default_value'] == $form_state['values']['springboard_logo_links']) {
    return;
  } 

  // Get the logo drop-down menu's parent link's ID:
  $parent_link_path = 'admin/springboard';
  $plid = db_query("SELECT mlid FROM {menu_links} WHERE menu_name = 'springboard_admin_menu' AND link_path = :parent_path AND plid = 0;",
    array(':parent_path' => $parent_link_path))
    ->FetchField();
  if (!$plid || !isset($form_state['values']['springboard_logo_links'])) {
    drupal_set_message('There was a problem updating logo drop-down menu items.', 'error');
    return;
  }

  $new_logo_links = _springboard_admin_parse_header_logo_links($form_state['values']['springboard_logo_links']);
  $old_logo_links = $form['menu']['springboard_logo_links']['#default_value'];

  // Gather info about the current menu:
  $current_links_data = array();
  $current_links_query = db_query("SELECT * FROM {menu_links} WHERE menu_name = 'springboard_admin_menu' AND plid = :plid", 
    array(':plid' => $plid));
  foreach ($current_links_query as $current_link) {
    $current_links_data[] = $current_link;
  }
  
  // Rebuilt the logo's drop-down menu:
  $count = 0;
  foreach ($new_logo_links as $new_link_title => $new_link_path) {
    $item = array(
      'link_path' => $new_link_path,
      'link_title' => $new_link_title,
      'mlid' => 0,
      'plid' => $plid,
      'menu_name' => 'springboard_admin_menu',
      'expanded' => 1,
      'external' => 1,
      'customized' => 1,
      'weight' => $count,
      'options' => array('attributes' => array('target' => '_blank')),
    );
    if (isset($current_links_data[$count]) && isset($current_links_data[$count]->mlid)) {
      $item['mlid'] = $current_links_data[$count]->mlid;
    }
    menu_link_save($item);
    $count++;
  }

  // If the updated menu has fewer items then delete the old items:
  foreach ($current_links_data as $index => $current_link_data) {
    if ($index >= count($new_logo_links)) {
      if ($current_link_data->plid == $plid) { // Just to be safe.
        menu_link_delete($current_link_data->mlid);
      }
    }
  } 

  menu_rebuild();
  drupal_set_message('The logo drop-down menu has been updated.');
}

/**
 * Validation handler for springboard_admin_settings form. Checks that the submitted URLs are valid.
 * Because valid_url() is a bit broad, this does some additional validation.
 */
function _springboard_admin_logo_links_validate(&$form, &$form_state) {

  $errors = array();
  if (isset($form_state['values']['springboard_logo_links'])) {
    $logo_links = _springboard_admin_parse_header_logo_links($form_state['values']['springboard_logo_links']);
    foreach ($logo_links as $link_title => $link_path) {
      if ($link_title == '') {
        $errors[] = t('Please enter a label for URL "' . $link_path . '".');
      }
      elseif (!valid_url($link_path, TRUE) || strpos($link_path, 'http') === FALSE || strpos($link_path, '.') === FALSE) {
        $errors[] = t('"' . $link_path . '" is not a valid url.');
      }
    } 
    if (!empty($errors)) {
      $errors[] = t('Please ensure all URLs are valid, starting with "http://" or "https://".');
      form_error($form['menu']['springboard_logo_links'], implode("<br />", $errors));
    }
  }
}

/**
 * Helper function to get logo drop-down menu link data from the associated settings field.
 *
 * @param $logo_field_value
 *   Content of the "Springboard Logo Drop-Down Links" textarea field with each
 *   line containing a "Label|URL" for the header logo's drop-down menu.
 */
function _springboard_admin_parse_header_logo_links($logo_field_value) {
  $logo_links = array();
  if (is_string($logo_field_value)) {
    $logo_field_value = trim($logo_field_value);
    $logo_field_rows = explode("\n", $logo_field_value);
    foreach ($logo_field_rows as $logo_field_row) {
      $link_data = explode('|', $logo_field_row);
      $link_path = isset($link_data[1]) ? trim($link_data[1]) : '';
      $link_title = isset($link_data[0]) ? trim($link_data[0]) : '';
      $logo_links[$link_title] = $link_path; 
    }
  }
  return $logo_links;
}

/**
 * API Function
 * Assembles an associative array of paths and their Springboard aliases. Allows
 * other modules to add to or alter the array of paths.
 *
 * @return $patterns
 * An array of path + alias pattern pairs. Each item is an array containing:
 *   - path: An associative array describing the original menu router path.
 *     - regex: A regular expression that matches the path.
 *     - replacement: The original path with arguments in the form of '%1'.
 *   - alias: An associative array describing the springboard alias.
 *     - regex: A regular expression that matches the path.
 *     - replacement: The original path with arguments in the form of '%1'.
 *
 */

function springboard_admin_alias_patterns() {
  $patterns = module_invoke_all('springboard_admin_alias_patterns');
  drupal_alter('springboard_admin_alias_patterns', $patterns);
  return($patterns);
}

