/**
 * Implements hook_module_implements_alter().
 */
function springboard_admin_module_implements_alter(&$implementations, $hook) {
  // Move these hooks to the end to ensure modules have made their changes.
  $end = [
    'springboard_admin_admin_menu_items_alter',
    'springboard_admin_form_page_types_alter',
  ];
  if (
    isset($implementations['springboard_admin'])
    && in_array($hook, $end)
  ) {
    $group = $implementations['springboard_admin'];
    unset($implementations['springboard_admin']);
    $implementations['springboard_admin'] = $group;
  }
}

/**
 * Implements hook_views_api().
