/**
 * Title callback used to change the menu titles based on whether a user gets
 * the Springboard admin UI.
 *
 * @param $original_title
 *   Original title for users who do not get the Springboard admin ui.
 *
 * @param $new_title
 *   Replacement title for users who get the the Springboard admin ui.
 */
function springboard_admin_menu_title_callback($original_title, $new_title) {
  global $user;
  if (springboard_admin_user_gets_sbux($user)) {
    return $new_title;
  }

  return $original_title;
}

/**
 * Check user if a user should have access to the marketing menu item.
 *
 * This could be replaced by a named permission rather than relying
 * on subsets of other named permissions.
 *
 * @return bool
 */
function springboard_admin_access_donation_form_pages($type = NULL) {
  if (user_access("administer springboard")
    || user_access('administer springboard dashboard')
    || user_access('administer fundraiser')
    || user_access('bypass node access')
  ) {
    return TRUE;
  }
  $types = array();
  if (!isset($type)) {
    $types = variable_get('springboard_admin_allowed_form_types', array_keys(_springboard_admin_enabled_form_types()));
    foreach ($types as $donation_type) {
      if (fundraiser_is_donation_type($donation_type)) {
        if (user_access('edit any ' . $donation_type . ' content')
        || node_access('create', $donation_type)) {
          return TRUE;
        }
      }
    }
  }
  elseif(fundraiser_is_donation_type($type)) {
    if ((user_access('edit any ' . $type . ' content')
      || node_access('create', $type))
    ) {
      return TRUE;
    }
  }
  $check_types = isset($type) ? $type : $types;
  $access = module_invoke_all('springboard_admin_access_donation_form_pages', $check_types);
  if (!empty(array_filter($access))) {
    return TRUE;
  }

  return FALSE;
}

/**
 * Check user if a user should have access to the marketing menu item.
 *
 * This could be replaced by a named permission rather than relying
 * on subsets of other named permissions.
 *
 * @return bool
 */
function springboard_admin_access_form_pages($type = NULL) {

  if (user_access("administer springboard")
    || user_access('administer springboard dashboard')
    || user_access('administer fundraiser')
    || user_access('bypass node access')
  ) {
    return TRUE;
  }

  $webform_types = array();

  if (!isset($type)) {
    $webform_types = variable_get('springboard_admin_allowed_form_types', array_keys(_springboard_admin_enabled_form_types()));
    foreach ($webform_types as $webform_type) {
      if ((user_access('edit any ' . $webform_type . ' content')
        || node_access('create', $webform_type))
        && !fundraiser_is_donation_type($webform_type)
      ) {
        return TRUE;
      }
    }
  }
  else {
    if ((user_access('edit any ' . $type . ' content')
      || node_access('create', $type))
    ) {
      return TRUE;
    }
  }

  $check_types = isset($type) ? $type : $webform_types;
  $access = module_invoke_all('springboard_admin_access_form_pages', $check_types);
  if (!empty(array_filter($access))) {
    return TRUE;
  }

  return FALSE;
}

